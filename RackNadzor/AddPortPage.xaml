<Page x:Class="RackNadzor.AddPortPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RackNadzor"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddPortPage">

    <Grid>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,10" Width="300">
            <Border Background="#F8F9FA" CornerRadius="8" Padding="20" BorderBrush="#E2E8F0" BorderThickness="1">
                <StackPanel Orientation="Vertical">

                    <!-- Заголовок -->
                    <TextBlock FontSize="22" FontWeight="SemiBold" Text="Редактирование порта" 
                       Foreground="#2E3440" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                    <!-- Номер порта -->
                    <StackPanel Orientation="Horizontal" Margin="0,8" VerticalAlignment="Center">
                        <TextBlock Text="Порт:" FontSize="16" Width="100" VerticalAlignment="Center" 
                           Foreground="#4A5568" FontWeight="SemiBold"/>
                        <TextBox Name="PortNumberTextBox" Width="120" Height="32" FontSize="14" 
                         VerticalContentAlignment="Center" TextAlignment="Center"
                         Background="White" BorderBrush="#CBD5E0" BorderThickness="1" Text="{Binding PortNumber}"/>
                    </StackPanel>

                    <!-- Скорость порта -->
                    <StackPanel Orientation="Horizontal" Margin="0,8" VerticalAlignment="Center">
                        <TextBlock Text="Скорость:" FontSize="16" Width="100" VerticalAlignment="Center" 
                           Foreground="#4A5568" FontWeight="SemiBold"/>
                        <ComboBox Name="PortSpeedComboBox" Width="120" Height="32" FontSize="14" 
                          VerticalContentAlignment="Center" SelectedIndex="0">
                            <ComboBoxItem Content="10 Mbps"/>
                            <ComboBoxItem Content="100 Mbps"/>
                            <ComboBoxItem Content="1 Gbps"/>
                            <ComboBoxItem Content="10 Gbps"/>
                            <ComboBoxItem Content="40 Gbps"/>
                            <ComboBoxItem Content="100 Gbps"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Статус порта -->
                    <StackPanel Orientation="Horizontal" Margin="0,8" VerticalAlignment="Center">
                        <TextBlock Text="Статус:" FontSize="16" Width="100" VerticalAlignment="Center" 
                           Foreground="#4A5568" FontWeight="SemiBold"/>
                        <ComboBox Name="PortStatusComboBox" Width="120" Height="32" FontSize="14" 
                          VerticalContentAlignment="Center" SelectedIndex="0">
                            <ComboBoxItem Content="Active" Background="#F0FFF4" Foreground="#2F855A"/>
                            <ComboBoxItem Content="Disabled" Background="#FFF5F5" Foreground="#C53030"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Кнопки -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                        <Button Content="Сохранить" Name="SavePortBtn" Click="SavePortBtn_Click" 
                        Width="100" Height="35" FontSize="14" FontWeight="SemiBold"
                        Background="#FF860606" Foreground="White" BorderBrush="#2C5282"
                        Margin="5,0">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#3182CE"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#2C5282"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button Content="Назад" Name="CancelPortBtn" Click="CancelPortBtn_Click"
                        Width="100" Height="35" FontSize="14" FontWeight="SemiBold"
                        Background="#A0AEC0" Foreground="White" BorderBrush="#718096"
                        Margin="5,0">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#CBD5E0"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>

                </StackPanel>
            </Border>
        </StackPanel>


    </Grid>
</Page>
