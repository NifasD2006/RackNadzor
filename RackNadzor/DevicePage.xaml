<Page x:Class="RackNadzor.DevicePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RackNadzor"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DevicePage" FontFamily="Segoe UI"       Loaded="Page_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="30" ></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Поиск:" FontSize="22" Margin="5" ></TextBlock>
                <TextBox Width="315" Height="30"  Margin="5"  FontSize="22" TextChanged="TextBox_TextChanged" Name="TextBoxSearch" ></TextBox>
                <TextBlock Text="Производитель:" FontSize="22" Margin="5" ></TextBlock>
                <ComboBox FontSize="15" Width="180" Height="40" SelectionChanged="ComboBox_SelectionChanged" Name="WendorComboBox" >
                    <TextBlock Height="30" Margin="5" Width="150" FontSize="22" > Любой</TextBlock>
                    <TextBlock Height="30" Margin="5" Width="150" FontSize="22" > Dell</TextBlock>
                    <TextBlock Height="30" Margin="5" Width="150" FontSize="22" > Cisco</TextBlock>
                    <TextBlock Height="30" Margin="5" Width="150" FontSize="22" > Supermicro</TextBlock>
                    <TextBlock Height="30" Margin="5" Width="150" FontSize="22" > HP</TextBlock>
                    <TextBlock Height="30" Margin="5" Width="150" FontSize="22" > Lenovo</TextBlock>
                </ComboBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" >
                
                <StackPanel Orientation="Vertical" Margin="5">
                    <TextBlock Text="Сортировка по дате тех обслуживания" FontSize="22"></TextBlock>
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="5">
                        <RadioButton Content="По возрастанию" GroupName="Sort" Width="180" FontSize="20" x:Name="RButtonUP" Checked="RButtonUP_Checked"/>
                        <RadioButton Content="По убыванию" GroupName="Sort" Width="180" FontSize="20" x:Name="RButtonDown" Checked="RButtonDown_Checked"/>
                    </StackPanel>
                </StackPanel>

                <Button Width="35" Margin="80,0,15,0" Click="RefrashBtn_Click" Name="RefrashBtn">
                    <Image Source="res\ref3.jpg" ></Image>
                </Button>
                <Button Margin="0,0,0,0" Width="190" Name="AddBtn" Click="AddBtn_Click" >Новое устройство </Button>


                
            </StackPanel>

            
        </StackPanel>

        

        
        
        
        
        <Grid Grid.Row="1" >
            <ListView Name="DeviceListView" >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition Width="600" ></ColumnDefinition>
                                <ColumnDefinition ></ColumnDefinition>
                                <ColumnDefinition ></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Image Width="300" Grid.RowSpan="4" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="200,5,5,5" Stretch="Uniform">
                                <Image.Source>
                                    <Binding Path="DeviceTypes.DeviceTypeImage">
                                        <Binding.TargetNullValue>
                                            <ImageSource>
                                                res\noPhoto.png
                                            </ImageSource>
                                        </Binding.TargetNullValue>
                                    </Binding>
                                </Image.Source>
                            </Image>
                            <StackPanel Grid.Column="1" Orientation="Vertical" Margin="5"  VerticalAlignment="Center">
                                <StackPanel  Orientation="Horizontal">
                                    <TextBlock Text="{Binding DeviceManufacturer, StringFormat=Устройство: {0} |  }"  FontSize="25" ></TextBlock>
                                    <TextBlock Text="{Binding DeviceModel }" FontSize="25" ></TextBlock>
                                </StackPanel>
                                <TextBlock Text="{Binding DeviceTypes.DeviceTypeName, StringFormat= Тип: {0}}" FontSize="20" ></TextBlock>
                                <TextBlock Text="{Binding DeviceSerialNumber, StringFormat= Серийный номер:{0}}" FontSize="20" ></TextBlock>
                                <StackPanel  Orientation="Horizontal">
                                    <TextBlock Text="{Binding DeviceIP, StringFormat=IP/Domen: {0}/}"  FontSize="20" ></TextBlock>
                                    <TextBlock Text="{Binding DeviceDomainName }" FontSize="20" ></TextBlock>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Button HorizontalAlignment="Left" Margin="0,5,5,0" Width="200" Name="EditBtn" Click="EditBtn_Click" >Редактировать</Button>
                                    <Button HorizontalAlignment="Left" Margin="0,5,5,0" Width="200" Name="DeleteBtn" Click="DeleteBtn_Click" >Удалить</Button>
                                </StackPanel>
                                
                            </StackPanel>
                            
                            
                            <Border Grid.Column="2"  HorizontalAlignment="Center" VerticalAlignment="Center"  BorderBrush="Black" BorderThickness="1">
                                <StackPanel Orientation="Vertical" Margin="10,50,10,50" >
                                    <TextBlock Text="{Binding Racks.DataCenters.DataCenterName, StringFormat=ЦОД: {0}}" FontSize="20" ></TextBlock>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding DeviceRackName, StringFormat=Стойка|Юнит: {0}| }" FontSize="20" ></TextBlock>
                                        <TextBlock Text="{Binding DevicePositionInUnits}" FontSize="20" ></TextBlock>
                                    </StackPanel>
                                    <TextBlock Text="Дата тех. обслуживания:" FontSize="20"></TextBlock>
                                    <TextBlock Text="{Binding DeviceInspectionDate, StringFormat=dd.MM.yyyy}" FontSize="20" ></TextBlock>
                                </StackPanel>
                            </Border>

                            
                            

                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <StackPanel  Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,7,0,0" >
            <TextBlock Text="Текующие кол-во устройств: " ></TextBlock>
            <TextBlock Name="CountTBlock"  ></TextBlock>
            <TextBlock Text="/"  ></TextBlock>
            <TextBlock Name="MaxCountTBlock"  ></TextBlock>
            
        </StackPanel>
        

    </Grid>
</Page>
