<Application x:Class="RackNadzor.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:RackNadzor"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="Button" >
            <Setter Property="Height"  Value="35"></Setter>
            <Setter Property="Width"  Value="140"></Setter>
            <Setter Property="FontSize"  Value="20"></Setter>
            <Setter Property="Margin"  Value="5"></Setter>
            <Setter Property="Background"  Value="#FF840606"></Setter>
            <Setter Property="FontFamily"  Value="#Segoe UI"></Setter>
            <Setter Property="Foreground"  Value="#e0e0e0"></Setter>

            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#A00000"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#600000"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>

        </Style>
    </Application.Resources>
</Application>
